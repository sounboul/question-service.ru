<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <meta name="author" content="Ivan Katkov" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <meta name="keywords" content="{% block keywords %}Question Service Keywords{% endblock %}" />
    <meta name="description" content="{% block description %}Question Service Description{% endblock %}" />

    <title>{% block title %}Question Service{% endblock %}</title>

    <link rel="shortcut icon" href="/assets/images/favicon.png" />

    {% block stylesheets %}
        {{ encore_entry_link_tags('css/plugins', null, 'frontend') }}
        {{ encore_entry_link_tags('css/styles', null, 'frontend') }}
    {% endblock %}
</head>
<body>
{% include "frontend/components/env.html.twig" %}
<div id="preloader">
    <div class="row loader">
        <div class="loader-icon"></div>
    </div>
</div>

<div class="main-wrapper">
    <header>
        <div class="navbar-default">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="menu_area">
                            <nav class="navbar navbar-expand-lg navbar-light no-padding">
                                <div class="navbar-header navbar-header-custom">
                                    <a href="/" class="navbar-brand width-200px sm-width-180px xs-width-150px">
                                        <img id="logo" src="/assets/images/logo.png" alt="logo">
                                    </a>

                                    <a href="{{ path('frontend_question_create') }}" class="btn btn-primary">Задать вопрос</a>
                                </div>

                                <div class="navbar-toggler"></div>

                                {% include "frontend/components/header-menu.html.twig" %}
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section style="padding: 20px;">
        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </section>

    <footer class="bg-light">
        <div class="padding-90px-top md-padding-70px-top sm-padding-50px-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-sm-6 sm-margin-40px-bottom">
                        <img src="/assets/images/logo.png" class="width-70" alt="" />
                    </div>

                    <div class="col-lg-2 col-sm-6 sm-margin-40px-bottom">
                        <h3 class="footer-title-style1">Информация</h3>

                        <ul class="list-style-1 no-margin-bottom">
                            <li><a href="{{ path('frontend_about') }}">О проекте</a></li>
                            <li><a href="{{ path('frontend_contacts') }}">Контакты</a></li>
                        </ul>
                    </div>

                    <div class="col-lg-3 col-sm-6 mobile-margin-40px-bottom">
                        <div class="padding-50px-left sm-no-padding-left">
                            <h3 class="footer-title-style1">Общие вопросы</h3>

                            <ul class="list-style-1 no-margin-bottom">
                                <li><a href="{{ path('frontend_rules') }}">Правила сервиса</a></li>
                                <li><a href="{{ path('frontend_advert') }}">Реклама на сайте</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-lg-4 col-sm-6">
                        <div class="padding-30px-left sm-no-padding-left">
                            <h3 class="footer-title-style1">Подписка на рассылку</h3>
                            <form class="rounded-pill newsletter-form">
                                <div class="input-group">
                                    <input type="email" class="form-control pl-0" name="email" placeholder="Введите свой E-mail адрес">
                                    <div class="input-group-append">
                                        <button class="btn btn-white text-primary" type="submit"><i class="fas fa-arrow-right"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="padding-30px-bottom margin-60px-top row">
                    <div class="col-12">
                        <div class="float-left xs-width-100 text-center xs-margin-5px-bottom">
                            <ul class="social-links no-margin">
                                <li>
                                    <a href="javascript:void(0)"><i class="fab fa-facebook-f"></i></a>
                                </li>
                                <li>
                                    <a href="javascript:void(0)"><i class="fab fa-twitter"></i></a>
                                </li>
                                <li>
                                    <a href="javascript:void(0)"><i class="fab fa-instagram"></i></a>
                                </li>
                                <li>
                                    <a href="javascript:void(0)"><i class="fab fa-linkedin-in"></i></a>
                                </li>
                                <li>
                                    <a href="javascript:void(0)"><i class="fab fa-dribbble"></i></a>
                                </li>
                            </ul>
                        </div>

                        <div class="float-right xs-width-100 text-center">
                            <p class="text-medium-gray margin-5px-top xs-no-margin-top">
                                © Сетевое издание «Question Service», {{ 'now' | date('Y') }}, 16+
                                <br>
                                Работает на Symfony 5.2
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>

{% block javascripts %}
    {{ encore_entry_script_tags('js/jquery', null, 'frontend') }}
    {{ encore_entry_script_tags('js/bootstrap', null, 'frontend') }}
    {{ encore_entry_script_tags('js/nav-menu', null, 'frontend') }}
    {{ encore_entry_script_tags('js/recaptcha', null, 'frontend') }}
    {{ encore_entry_script_tags('js/main', null, 'frontend') }}

    <script type="text/javascript" src="https://www.google.com/recaptcha/api.js?onload=onGoogleReCaptchaApiLoad&render=explicit&hl=ru" async defer></script>
{% endblock %}
</body>
</html>
