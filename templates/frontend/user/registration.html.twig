{% extends 'frontend/layouts/authbox.html.twig' %}

{% block title %}Регистрация{% endblock %}
{% block authbox %}
    <h4 class="card-title text-center">Регистрация</h4>

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.password) }}
    {{ form_row(registrationForm.agreeTerms) }}

    <button class="btn btn-lg btn-primary" type="submit">Регистрация</button>

    <div class="mt-4 text-center">
        Вы уже зарегистрированы? <a href="{{ url('frontend_login') }}">Войти</a>
        <br>
        Забыли пароль? <a href="{{ url('frontend_forgot_password_request') }}">Восстановить пароль</a>
    </div>

    {{ form_end(registrationForm) }}
{% endblock %}
